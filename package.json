{
  "name": "@switchboard-xyz/switchboard-v2-monorepo",
  "description": "switchboard v2 repo containing type definitions, libraries, and examples",
  "private": true,
  "workspaces": [
    "libraries/sbv2-lite",
    "libraries/ts",
    "libraries/utils-ts",
    "cli",
    "feeds/*",
    "example-programs/*",
    "website"
  ],
  "scripts": {
    "start": "echo \"Error: no start script specified\" && exit 1",
    "docs": "cd website && npm start",
    "docs:build:py": "pip install poetry && cd libraries/py && poetry install && poetry run python -m pdoc switchboardpy -o ../../website/static/api/sbv2-py",
    "docs:build:ts": "npm run docgen -w libraries/ts",
    "docs:build:site": "npm run build:site -w website",
    "docs:build": "run-s docs:build:ts docs:build:site",
    "docs:deploy": "npm run deploy -w website",
    "gen:idl": "rawrtools gen:anchor SW1TCH7qEPTdLsDHRgPuMQjbQxKdH2aBStViMFnt64f -o website/idl -p ./",
    "reset": "npx npkill && npm ci"
  },
  "devDependencies": {
    "@gallynaut/rawrtools": "^0.0.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "lerna": "^4.0.0",
    "npkill": "^0.8.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
